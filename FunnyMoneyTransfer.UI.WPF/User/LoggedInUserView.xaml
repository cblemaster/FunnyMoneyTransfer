<UserControl x:Class="FunnyMoneyTransfer.UI.WPF.User.LoggedInUserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FunnyMoneyTransfer.UI.WPF.User"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.DataContext>
        <local:LoggedInUserViewModel />
    </UserControl.DataContext>    
    <Grid>
        <Grid Style="{StaticResource gridWhiteStyle}">
            <StackPanel Style="{StaticResource verticalStackPanelStyle}">
                <TextBlock Style="{StaticResource smallHeaderTextBlockStyle}"
                           x:Name="tbHeader"
                           Text="Logged in as:" />
                <TextBlock Style="{StaticResource balanceTextBlockStyle}"
                           x:Name="tbUsername"
                           Text="{Binding Username}" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
