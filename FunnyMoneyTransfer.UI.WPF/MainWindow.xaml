<Window x:Class="FunnyMoneyTransfer.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FunnyMoneyTransfer.UI.WPF"
        xmlns:user="clr-namespace:FunnyMoneyTransfer.UI.WPF.User"
        xmlns:account="clr-namespace:FunnyMoneyTransfer.UI.WPF.Account"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="450"
        Width="800">
    <Window.DataContext>
        <local:MainWindowViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="VisibleIfTrueConverter" />
        
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*" />
            <ColumnDefinition Width="6*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Menu Grid.ColumnSpan="2"
              Style="{StaticResource menuStyle}">
            <MenuItem Style="{StaticResource boldMenuItemStyle}"
                      Header="Register"
                      Visibility="{Binding ShowLoginAndRegisterMenuItems, Converter={StaticResource VisibleIfTrueConverter}}"
                      Command="{Binding NavToRegisterCommand}" />
            <MenuItem Style="{StaticResource boldMenuItemStyle}"
                      Header="Login"
                      Visibility="{Binding ShowLoginAndRegisterMenuItems, Converter={StaticResource VisibleIfTrueConverter}}"
                      Command="{Binding NavToLoginCommand}" />
            <MenuItem Style="{StaticResource menuItemStyle}"
                      Header="Log Out"
                      Visibility="{Binding ShowNonLoginAndRegisterMenuItems, Converter={StaticResource VisibleIfTrueConverter}}"
                      Command="{Binding NavToLogoutCommand}" />
            <MenuItem Style="{StaticResource menuItemStyle}"
                      Header="Transfers"
                      Visibility="{Binding ShowNonLoginAndRegisterMenuItems, Converter={StaticResource VisibleIfTrueConverter}}" />
            <MenuItem Style="{StaticResource menuItemStyle}"
                      Header="Users"
                      Visibility="{Binding ShowNonLoginAndRegisterMenuItems, Converter={StaticResource VisibleIfTrueConverter}}"
                      Command="{Binding NavToUsersListCommand}"/>
        </Menu>
        <Grid Grid.Row="1"
              Visibility="{Binding ShowBalanceControl, Converter={StaticResource VisibleIfTrueConverter}}">
            <account:BalanceView x:Name="balanceView"
                                 VerticalAlignment="Stretch"
                                 HorizontalAlignment="Left" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="1">
            <Grid Visibility="{Binding ShowRegisterControl, Converter={StaticResource VisibleIfTrueConverter}}">
                <user:RegisterUserView x:Name="registerUserView" />
            </Grid>
            <Grid Visibility="{Binding ShowLoginControl, Converter={StaticResource VisibleIfTrueConverter}}">
                <user:LoginUserView x:Name="loginUserView" />
            </Grid>           
        </Grid>
        <Grid Grid.Row="1"
              Grid.ColumnSpan="2">
            <TextBlock x:Name="tbIntro"
                       Style="{StaticResource headerTextBlockStyle}"
                       Text="Hello! Please Register or Login"
                       Visibility="{Binding ShowIntro, Converter={StaticResource VisibleIfTrueConverter}}" />
        </Grid>
        <Grid Grid.Row="1"
              Grid.Column="1"
              Visibility="{Binding ShowUserListControl, Converter={StaticResource VisibleIfTrueConverter}}">
            <user:ListUsersView x:Name="listUsersView" />
        </Grid>
    </Grid>
</Window>
